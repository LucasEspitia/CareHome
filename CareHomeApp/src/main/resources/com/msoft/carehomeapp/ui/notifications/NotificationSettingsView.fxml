<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.msoft.carehomeapp.controllers.notifications.NotificationSettingsController"
      spacing="16" minWidth="360" prefHeight="270"
      style="-fx-background-color: white;">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18"/>
    </padding>

    <Label text="Notification Settings"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"
           minWidth="200"/>

    <GridPane hgap="12" vgap="16">

        <!-- Frequency -->
        <Label text="Frequency:" 
               GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-font-size: 13px;" />

        <HBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="1">
            <ComboBox fx:id="frequencyCombo"
                      promptText="Select frequency"
                      prefWidth="160"/>
            <Button fx:id="clearFrequencyBtn"
                    text="X"
                    style="-fx-background-radius: 20; -fx-background-color: #ddd; -fx-font-size: 12px;"
                    minWidth="26" minHeight="26"/>
        </HBox>

        <!-- Repeat -->
        <Label text="Repeat:" 
               GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-font-size: 13px;" />

        <HBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <ComboBox fx:id="repeatCombo"
                      promptText="How many times?"
                      prefWidth="160"/>
            <Button fx:id="clearRepeatBtn"
                    text="X"
                    style="-fx-background-radius: 20; -fx-background-color: #ddd; -fx-font-size: 12px;"
                    minWidth="26" minHeight="26"/>
        </HBox>

        <!-- Notification Type -->
        <Label text="Notification Type:" 
               GridPane.rowIndex="2" GridPane.columnIndex="0"
               style="-fx-font-size: 13px;" />

        <HBox spacing="6" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <ComboBox fx:id="typeCombo"
                      promptText="Select type"
                      prefWidth="160"/>
            <Button fx:id="clearTypeBtn"
                    text="X"
                    style="-fx-background-radius: 20; -fx-background-color: #ddd; -fx-font-size: 12px;"
                    minWidth="26" minHeight="26"/>
        </HBox>

    </GridPane>

    <Button fx:id="saveBtn"
            text="Save and Schedule"
            maxWidth="Infinity"
            style="-fx-background-color: #1e88e5; -fx-text-fill: white; -fx-font-weight: bold;"/>
</VBox>
