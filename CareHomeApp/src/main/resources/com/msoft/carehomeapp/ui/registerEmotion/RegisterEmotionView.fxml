<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>

<VBox alignment="CENTER" spacing="15" 
    xmlns:fx="http://javafx.com/fxml" 
    fx:controller="com.msoft.carehomeapp.controllers.registerEmotion.RegisterEmotionController" 
    prefWidth="400" prefHeight="420"> 

    <Label text="Select your emotion" style="-fx-font-size: 18;" /> 

    <ComboBox fx:id="comboEmotion" prefWidth="200" /> 

    <Label text="Intensity" /> 
    
   <HBox spacing="10" alignment="CENTER">
        <Slider fx:id="sliderIntensity" min="1" max="10" value="5" prefWidth="180" />
        <Label fx:id="labelIntensityValue" text="5" style="-fx-font-size: 12;" />
    </HBox>
    <Button fx:id="btnNext" text="Next" prefWidth="180" />

</VBox>
